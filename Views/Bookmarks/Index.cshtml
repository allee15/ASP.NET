@if (ViewBag.Message != null)
{
        <h2 class="alert-info p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

<a class="btn btn-info rounded-pill mb-5 text-white" href="/Bookmarks/New">
     Adaugare bookmark<i class="bi bi-plus"></i>
</a>


<div class="row">
    @foreach (var bookmark in ViewBag.Bookmarks)
    {
        <div class="col-4 mb-4">
            <div class="card" style="width: 100%;">
                @*<img src="..." class="card-img-top" alt="..."> *@

                <div class="card-body">

                    <h5 class="card-title" name="Name">@bookmark.Name</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                                <div><i class="bi bi-person"> Creat de: </i> @bookmark.User.UserName</div>
                    }        

                    <br />

                    <a class="btn alert-info" href="/Bookmarks/Show/@bookmark.Id">Afisare Colectie</a>
                </div>
            </div>
        </div>
    }
</div>