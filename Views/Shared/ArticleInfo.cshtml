@model ArticlesApp.Models.Article


<div class="card-body">

    <h3 class="card-title alert-info py-3 px-3 rounded-2">@Model.Title</h3>

    <div class="card-text px-4 py-2 text-justify mt-4">@Html.Raw(Model.Content)</div>

    <div class="d-flex justify-content-between flex-row mt-5">

        <div><i class="bi bi-globe"></i> @Model.Category.CategoryName</div>

        <div><i class="bi bi-person"></i> @Model.User.UserName</div>

        <span class="text-secondary">@Model.Date</span>

    </div>

</div>


