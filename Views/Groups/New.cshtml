@model ArticlesApp.Models.Group


<h2 class="text-center mt-5">Adaugare grup</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Groups",
            method: FormMethod.Post))
            {
                
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Nume grup")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                <br />
                
                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
            "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />
                @*
                <label>Selectati membrii</label>
                @Html.DropDownListFor(m => m.Id, new SelectList(Model.UserList, "Value", "Text"),
            "Selectati noul membru", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Id, null, new { @class = "text-danger" })
            *@
                <br />

                <br />


                <button class="btn btn-success" type="submit">Adauga Grup</button>

            }

        </div>
    </div>
</div>








